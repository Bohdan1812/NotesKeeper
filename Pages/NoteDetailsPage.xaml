<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:NotesKeeper.ViewModels"
             x:Class="NotesKeeper.Pages.NoteDetailsPage"
             Title="NoteDetailsPage">
    

    
    <VerticalStackLayout Margin="20,0,20,0">
        <Label
            Text="{Binding Note.Text}"/>
        <Editor
            x:Name="titleEditor"
            Text="{Binding Note.Title}"/>
        <Editor 
            x:Name="textEditor"
            Text="{Binding Note.Text}"/>
        <Label Text="{Binding Note.UpdatedTime, StringFormat='Updated: {0}'}"/>
        <Label Text="{Binding Note.CreatedTime, StringFormat='Created: {0}'}"/>
        <HorizontalStackLayout Spacing="10">
            <Button 
                Text="Delete"
                Command="{Binding DeleteNoteCommand}"
                CommandParameter="{Binding Note.Id}"/>
            <Button 
                Text="Save"
                Command="{Binding EditCommand}"
                CommandParameter=""/>
            <Button 
                Text="Cancel"
                Command="{Binding BackCommand}"/>
        </HorizontalStackLayout>
        
    </VerticalStackLayout>
</ContentPage>